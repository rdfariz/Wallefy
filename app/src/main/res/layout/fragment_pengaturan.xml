<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="dataUsersViewModel" type="org.hz240.wallefy.dashboard.UserViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".pengaturan.pengaturanFragment">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_curve"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>

                <!--        <androidx.constraintlayout.widget.ConstraintLayout-->
                <!--            android:id="@+id/profileSection"-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:layout_marginHorizontal="24dp"-->
                <!--            android:layout_marginTop="16dp"-->
                <!--            app:layout_constraintTop_toTopOf="parent">-->

                <!--            <Button-->
                <!--                android:id="@+id/btn_close"-->
                <!--                android:layout_width="25dp"-->
                <!--                android:layout_height="25dp"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:background="@drawable/mdi_close"-->
                <!--                android:drawablePadding="5dp"-->
                <!--                app:layout_constraintBottom_toBottomOf="parent"-->
                <!--                app:layout_constraintEnd_toEndOf="parent"-->
                <!--                app:layout_constraintTop_toTopOf="parent" />-->
                <!--        </androidx.constraintlayout.widget.ConstraintLayout>-->

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/username_print(dataUsersViewModel.userLogin.displayName)}"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"></TextView>

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{dataUsersViewModel.userLogin.email.toString()}"
                        android:textSize="16sp"
                        android:textColor="#ffffff"></TextView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_user_image"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ic_person_white_24dp"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                    app:layout_constraintHorizontal_bias="0.481"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"></ImageView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_user_image">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/to_account_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:background="@drawable/bg_border_bottom"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <Button
                            android:id="@+id/icon_account_info"
                            android:layout_width="30dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_person_outline_black_24dp"
                            android:drawablePadding="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:text="Account Info"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@+id/icon_account_info"
                            app:layout_constraintStart_toEndOf="@+id/icon_account_info"
                            app:layout_constraintTop_toTopOf="@+id/icon_account_info"
                            app:layout_constraintVertical_bias="0.545"></TextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/to_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_border_bottom"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/to_account_info">

                        <Button
                            android:id="@+id/icon_notification"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_notifications_none_black_24dp"
                            android:drawablePadding="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:text="Notifications"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@+id/icon_notification"
                            app:layout_constraintStart_toEndOf="@+id/icon_notification"
                            app:layout_constraintTop_toTopOf="@+id/icon_notification"
                            app:layout_constraintVertical_bias="0.545"></TextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/to_out_community"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_border_bottom"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/to_notification">

                        <Button
                            android:id="@+id/outCm"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_directions_run_black_24dp"
                            android:drawablePadding="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:text="Out Community"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@+id/outCm"
                            app:layout_constraintStart_toEndOf="@+id/outCm"
                            app:layout_constraintTop_toTopOf="@+id/outCm"
                            app:layout_constraintVertical_bias="0.545"></TextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/to_signout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_border_bottom"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/to_out_community">

                        <Button
                            android:id="@+id/icon_signout"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_exit_to_app_black_24dp"
                            android:drawablePadding="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:text="Sign out"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@+id/icon_signout"
                            app:layout_constraintStart_toEndOf="@+id/icon_signout"
                            app:layout_constraintTop_toTopOf="@+id/icon_signout"
                            app:layout_constraintVertical_bias="0.545"></TextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>