<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.hz240.wallefy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:resizeableActivity="false"
        android:icon="@drawable/ic_logo_icon_bg"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_icon_bg"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".communityList.CommunityListActivity"></activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/HideActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pengaturan.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/HideActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:label="Login"
            android:launchMode="singleTask"
        />

        <!-- The below code is for android OS version below N -->
        <receiver
            android:name=".utils.ConnectivityReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>